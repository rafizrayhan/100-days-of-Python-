def turn_right():
    turn_left()
    turn_left()
    turn_left()
    
def hurdles():
    move()
    turn_left()
    move()
    turn_right()
    move()
    turn_right()
    move()
    turn_left()

#Using For Loops

for hurdle in range(0,6):
    hurdles()

# Using While Loops

number_of_hurdles = 6
while number_of_hurdles > 0:
    hurdles()
    number_of_hurdles -=1
    print(number_of_hurdles)
